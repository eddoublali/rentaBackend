{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",  
      "use": "@vercel/static-build"
    },
    {
      "src": "server/app.ts",      
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",           
      "dest": "server/app.ts"
    },
    {
      "src": "/(.*)",               
      "dest": "client/index.html"
    }
  ]
}
